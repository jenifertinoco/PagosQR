<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagosQR.Detalle">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="DETALLE" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
            </Frame>

            <Entry x:Name="txtNroBus" IsEnabled="False"/>
            <Entry x:Name="txtConductor" IsEnabled="False"/>
            <Label Text="Costos" HorizontalTextAlignment="Center" TextColor="White" FontSize="10"/>
            <Label Text="$ 0.25 Tarifa Normal" HorizontalTextAlignment="Center" TextColor="White" FontSize="10"/>
            <Label Text="$ 0.12 Tarifa Reducida" HorizontalTextAlignment="Center" TextColor="White" FontSize="10"/>
            <Button x:Name="btnPagar" Text="Pagar" Clicked="btnPagar_Clicked"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>