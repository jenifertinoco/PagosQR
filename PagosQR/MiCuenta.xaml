<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagosQR.MiCuenta">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="MI CUENTA" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
            </Frame>

            <Entry x:Name="txtNombre" IsEnabled="False"/>
            <Entry x:Name="txtEdad" IsEnabled="False"/>
            <Entry x:Name="txtTarifa" IsEnabled="False"/>
            <Entry x:Name="txtCorreo" IsEnabled="False"/>
            <Entry x:Name="txtCelular" IsEnabled="False"/>

            <Button x:Name="btnCerrarSesion" Text="Cerrar sesion" Clicked="btnCerrarSesion_Clicked"/>
            <Button x:Name="btnAcercaDe" Text="Acerca de" Clicked="btnAcercaDe_Clicked"/>
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>