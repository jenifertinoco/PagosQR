<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagosQR.Saldos">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="SALDOS" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
            </Frame>


            <Entry x:Name="txtSaldoActual" IsEnabled="False"/>
            <Button x:Name="btnRecargar" Text="Recargar" Clicked="btnRecargar_Clicked"/>
            <Label Text="Mis Pagos" HorizontalTextAlignment="Center" TextColor="White" FontSize="14"/>
            




        </StackLayout>
    </ContentPage.Content>
</ContentPage>